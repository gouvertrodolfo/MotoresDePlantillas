<div class="container">
    <form action="/productos" method="post">
    <div class="form-group">
        <label for="title">Nombre: </label>
        <input type="text" name="title" id="title" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="price">Precio: </label>
        <input type="number" name="price" id="price" class="form-control" step="0.01" min="0" required>
    </div>
    <div class="form-group">
        <label for="thumbnail">Foto Url: </label>
        <input type="url" name="thumbnail" id="thumbnail" class="form-control" placeholder="https://example.com" pattern="https://.*" size="30"        required>
    </div>
    <div class="btn-group btn-group-justified">
        <input type="submit" value="Enviar" class="btn btn-default">
        <input type="button" value="Cancelar" onclick="location.href='/productos'" class="btn btn-default">
    </div>
    </form>
</div>